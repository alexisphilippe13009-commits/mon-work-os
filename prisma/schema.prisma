// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Ce modèle va stocker l'intégralité de ton Work OS
// C'est le "Cerveau" qui sauvegarde tout (Workspaces, Boards, Items...)
model AppState {
  id        String   @id @default("global_state") // Une seule ligne pour l'instant (Single Tenant)
  data      Json     // Ici, on stocke tout ton objet "workspaces" complexe
  updatedAt DateTime @updatedAt
}